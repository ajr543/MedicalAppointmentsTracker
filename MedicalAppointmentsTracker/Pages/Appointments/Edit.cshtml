@page
@model MedicalAppointmentsTracker.Pages.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            <input type="hidden" asp-for="Appointment.UserId" />
            <div class="form-group mt-2">
                <label asp-for="Appointment.Provider" class="control-label"></label>
                <input asp-for="Appointment.Provider" class="form-control" />
                <span asp-validation-for="Appointment.Provider" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Appointment.Reason" class="control-label"></label>
                <input asp-for="Appointment.Reason" class="form-control" />
                <span asp-validation-for="Appointment.Reason" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Appointment.Status" class="control-label"></label>
                <select class="form-control" asp-for="Appointment.Status" asp-items="AppointmentHelper.StatusList">
                    <option value="">--Select Status--</option>
                </select>
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
